#banner-home-auto
  display:flex
  flex-direction:row
  align-items: stretch
  .about-content
    flex-grow: 1
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 80vh;
    width: 50%;
    .about-content-container
      padding: 40px 85px;
    .btn
      margin-bottom: 10px;
  .picture-right
    flex-grow: 1
    width: 50%
    margin: 0 auto
    display: block
    background-color:#000
    background-size: cover
    background-position: center center;
    background-repeat: no-repeat;
  .number-round
    padding: 6px 11px;
    font-weight: bold;
    border-radius: 30px;
    color: white;
    background-color: green;
  @media (max-width: 768px)
    flex-direction: column;
    .about-content
      width: 100%;
      .about-content-container
        padding: 40px 30px;
    .picture-right
      width: 100%;
      min-height: 60vh;
 

