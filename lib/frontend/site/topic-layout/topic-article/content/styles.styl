.entry-content
  font-family 'Noto Serif', serif
  line-height 1.6
  margin-bottom 2em

a:hover
  color #3d699e
  text-decoration underline

img
  max-width 100%

.body
  font-size 110%
.summary
  font-size 16px
  margin 40px 0

.clauses
  margin-top 20px

  .clause
    margin-bottom 20px
    word-wrap break-word
    img
      width 100%


.topic-content-special
  // .content-section
  .section-title
    color: #383838;
    background-color: #fff;
    box-shadow: 0px 0px 10px #0000001A;
    padding: 10px 20px;
    cursor: pointer;
    display: flex
    border-radius: 10px;
    border: 1px solid #e6e6e6;
    flex-direction: row
    align-items: center
    justify-content: space-between
  .section-body
    padding-left: 20px;
    padding-right: 20px;
    // border-left: 10px solid #3473a9;
    // margin-left: 20px;
    transition: all 1s ease-in-out;
    &.hidden
      display none
    &.visible
      display block
