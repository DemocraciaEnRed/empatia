/* Vars
-------------------------------------------------- */
border_radius = 3px
/* Topic options view
-------------------------------------------------- */
.proposal-options
  position relative
  margin-bottom 2em
  .alert
    margin 20px 0 10px
  .vote-options
    .proxy-vote
      display inline-block
    .vote-option
      display inline-block
      width 30%
      font-size 14px
      text-align center
      margin-right 5%
      color white
      text-transform uppercase
      font-weight bold
      border-radius 40px;
      padding 14px
      line-height 1.1
      -webkit-transition all 0.3s ease
      i
        display inline-block
        margin-right 8px
      span
        display inline-block
        font-weight: bold
      &.vote-yes
        background-color #47C857
        &:hover
          background-color darken(#47C857, 40%)
      &.vote-no
        background-color #C22978
        margin-right 0
        &:hover
          background-color darken(#C22978, 40%)
      &.vote-abstain
        background-color #E3CA3C
        &:hover
          background-color darken(#E3CA3C, 40%)
      &.delegate-vote
        background-color #3498db

    @media screen and (max-width: 800px) and (min-width: 700px)
      .vote-option
        display block
        width 100%
        margin 10px 0 0 0
    @media screen and (max-width: 530px)
      .vote-option
        display block
        width 100%
        margin 10px 0 0 0

  .change-vote
    background none
    border none
    font-size 16px
    color black
    font-weight bold
    margin-bottom 10px
    display block
    i
      margin-right 7px
      position relative;
      top 2px
      font-size 13px
    &:hover
      text-decoration none
  .vote-box, .results-box
    background white
    padding 20px 0
    h5
      text-transform uppercase
      margin-top 0
    .delegation-box
      display inline-block
  .vote-box
    #voting-error
      color: black
    .meta-data
      margin-bottom 20px
    .secret-results
      margin-right 6px
    .secret-results:before
      content " - "

  .toggle-results
    span
      margin-right 5px

  .results-box
    box-sizing border-box
    width 100%
    margin 0
    padding-top 10
    h5
      margin-bottom 0
    .percent
      font-size 30px
    .votes
      margin-left 10px
    .votes-results
      margin-bottom 20px
    .results-summary
      font-weight bold
    .vote-yes, .vote-yes h5
      color #47C857
    .vote-abstain, .vote-abstain h5
      color #E3CA3C
    .vote-no, .vote-no h5
      color #C22978

  .voted-box
    .alert-voted 
      display: flex
      justify-content: center
      align-items: center
      
      .bold 
        font-weight: bold
      
      .black 
        color: #000
      
      .thanks 
        margin: 0 10px
    
    .chosen-answer
      text-align: center

  .result-wrapper
    .chosen-answer
      text-align: center
      margin-bottom: 0
    
