#forum-topic-cards
  // background-color: #e9e9e9;
  background-color: #FFF
  .topics-container
    margin: 0 30px;
    // width: 100%
    // display: flex
    // flex-wrap: wrap
    // justify-content: space-around
    // .flickity-viewport
    //   margin: 0 40px;
    .carrousel-topic-card
      padding-left: 7px;
      width: 99%;
      height: 330px;
      margin-right: 7px;
      background: #FFF;
      border-radius: 5px;
      transition: transform 0.3s linear;
      @media (min-width: 576px)
        width: 49%;
      @media (min-width: 1024px)
        width: 32.6%;
      @media (min-width: 1200px)
        width: 24.5%;
      .card
        border: none;
      .card-head
        height: 150px;
        background-position: center;
        background-size: cover;
        border-radius: 10px
      .card-body
        height: 180px;
        display: flex
        flex-direction: column
        justify-content: space-between
        // padding: 10px;
        padding-bottom: 0;
        background-color: #FFF;
        .the-content
          padding: 10px;
          height: 100%;
          display:flex;
          flex-direction: column;
          justify-content: center;
          .the-title
            text-transform: uppercase;
        .the-about
          max-height: 80px;
          position: relative
          overflow: hidden;
          .the-overlay
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(180deg, rgba(255,255,255,0) 20%, rgba(255,255,255,0.8) 65%, #fff 100%);
        button.btn
          border-radius: 50px;

