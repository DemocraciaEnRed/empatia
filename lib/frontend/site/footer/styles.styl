.ext-footer
  padding 60px 0
  // margin-top 30px
  font-size 1em
  background-color #E1E1E1
  border-top: 1px solid rgba(0, 0, 0, 0.1)
  position: relative
  .barritas-colores-top
    position: absolute
    top: 0;
    left: 0
    width: 100%
    height: 10px;
  .footer
    // max-width 1180px
    margin 0 auto
    display flex
    flex-direction row
    flex-wrap wrap
    align-items stretch
    justify-content space-between
  .promo
    position: absolute
    bottom: 5
    right: 5;
    font-size: 0.9rem;
    color: #a0a0a0
    margin: 0;
  .institutional
    display: flex
    flex-direction row
    align-items stretch
    justify-content space-between
    flex-grow: 1
    .social-media
      flex-grow: 1
      display: flex;
      align-items: center;
      justify-content: flex-end;
    .logo.gob
      display: flex;
      align-items: center;
      justify-content: center;
      img
        margin-right: 30px;
        max-width 100%
        width 180px

    p
      max-width 560px
  a
    color $main-link-color
    font-weight 400
    &:hover
      color $main-link-color-hover
      text-decoration underline


  .menu
    padding 0 15px
    text-align left

    // &:first-of-type
    //   flex-grow 3

    a
      color: #383838
      display block
      padding 6px 0
      &:hover
        color: $main-link-color-hover

  @media only screen and (max-width: 687px)
    .footer
      flex-direction column
      flex-wrap wrap
      padding 0 10px

    .institutional
      flex-direction column
      flex-wrap wrap
      padding 0 10px
      align-items: center
      .social-media
        flex-direction row
        flex-wrap wrap
        padding-bottom: 20px;
        align-items: center
      .logo.gob
        flex-direction row
        align-items: flex-start
        padding-bottom: 20px;
        flex-wrap wrap
        img
          margin-right: 0
          max-width 100%
          width 180px
      .menu
        flex-direction column
        flex-wrap wrap
        padding 0 10px
        a
          display block
          padding 6px 0
          margin-bottom 10px
          &:last-of-type
            margin-bottom 0
    .menu
      padding-right 0
      a
        display block
        line-height 1em

    .gob
      img
        width 300px

    .institutional
      padding 0 15px
