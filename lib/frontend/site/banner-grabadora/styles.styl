.banner-grabadora
  background-color: #f3f3f3;
  padding: 80px 20px
  margin-top: 30px;
  text-align: center
  position: relative;
  .help-text
    font-size: 0.8rem;
    color: #888888;
  .barritas-colores-top
    position: absolute
    top: 0;
    left: 0
    width: 70%
    @media (min-width: 768px) 
      width: 40%
  .barritas-colores-bottom
    position: absolute
    bottom: 0;
    right: 0
    width: 70%
    @media (min-width: 768px) 
      width: 40%
  p.title
    color: #4b3c59;
    font-size: 30px;
    margin: 20px auto;
    line-height: 1.25;
    @media (max-width: 600px)
      max-width: 80%
      font-size: 25px;
  p.subtitle
    color: #4b3c59;
    margin: 20px auto;
    line-height: 1.25;
    font-size: 18px;
    @media (max-width: 600px)
      max-width: 80%
      font-size: 16px;
  .boton-grabar
    margin: 0 auto
    background-color: #FFF;
    color: $primary-color
    box-shadow: 0 2px 2px rgba(#000, .2)
    font-size: 30px;
    display: inline-block;
    padding: 30px 35px;
    border-radius: 50px;
    margin: 5px 0px;
    &:hover
      cursor: pointer
      background-color: $primary-color
      color: #FFF
  .boton-stop
    margin: 0 auto
    background-color: red;
    color: white
    box-shadow: 0 2px 2px rgba(#000, .2)
    font-size: 30px;
    display: inline-block;
    padding: 30px 35px;
    border-radius: 50px;
    margin: 5px 0px;
    &:hover
      cursor: pointer
      background-color: white
      color: red
  .countdown-text
    font-size: 22px
    color: #4b3c59
    .recording-icon
      color: red
  .emojis-container
    .emoji-icon
      padding: 5px;
      font-size: 50px
      margin: 5px
      opacity: 0.5
      &:hover
        cursor: pointer
        // border: 1px solid $primary-color;
        opacity: 1
        // font-size: 60px
        // margin: 0 5px
  .ask-permission-container
    position: fixed
    top: 0
    left: 0
    height: 100vh
    width: 100vw
    background-color: rgba(0,0,0,0.8)
    display: flex
    justify-content: center
    align-items: center
    z-index: 10000
    .ask-permission-inner
      color: #FFF
      width: 60%;





  .boton-soy-grabadora
    border: none;
    background: #0396A6;
    box-shadow: 0px 4px 4px rgba(255, 255, 255, 0.25);
    border-radius: 5px;
    color: white
    padding: 15px 30px
    display: inline-block
    margin-top: 10px
    margin-bottom: 10px;

  .follow-container
    position:fixed;
    top:calc(50% - 250px);
    right:0;
    transition:width 300ms ease-out;
    width:0;

  .follow-grabadora
    box-sizing:border-box;
    position:absolute;
    top:300px;
    width:250px;
    height:34px;
    padding:0 20px;
    margin:0;
    cursor:pointer;
    background:$primary-color;
    border-radius:4px 4px 0px 0px;
    box-shadow: -4px 2px 4px rgba(0, 0, 0, 0.25);
    display:flex;
    align-items:center;
    justify-content:flex-start;
    transform:rotate(-90deg);
    transform-origin:bottom left;
    color:white;
    text-decoration:none;
    z-index:9999;
  span.follow-text
    text-decoration:none;
    font-size:14px;
    white-space:nowrap;
    color: white;
    overflow:hidden;
    text-overflow:ellipsis;
    width:100%;text-align:center;
    -webkit-font-smoothing:antialiased;
    -moz-osx-font-smoothing:grayscale;
    img
      width:25px;
      margin-right:10px;
